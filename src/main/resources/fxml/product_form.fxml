<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.erp.controller.FormularioProdutoController" hgap="10" vgap="8" styleClass="form-card">
    <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="txtSku" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Nome:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Descrição:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextArea fx:id="txtDescription" prefRowCount="3" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Preço de Venda:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="txtPrecoVenda" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label text="Quantidade:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="txtQuantidade" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Label text="Estoque Mínimo:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="txtEstoqueMinimo" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <Label fx:id="lblErro" style="-fx-text-fill: red;" GridPane.rowIndex="6" GridPane.columnIndex="1" />
</GridPane>
